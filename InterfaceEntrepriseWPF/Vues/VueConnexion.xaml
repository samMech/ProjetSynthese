<UserControl x:Class="InterfaceEntrepriseWPF.Vues.VueConnexion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localVues="clr-namespace:InterfaceEntrepriseWPF.Vues"
             xmlns:localVuesModeles="clr-namespace:InterfaceEntrepriseWPF.Vues_Modeles"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">

    <Border BorderThickness="5" BorderBrush="#7F00B9FF" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
        <GroupBox x:Name="groupBox" Header="Connexion" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="200" FontSize="14">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="21*"/>
                    <ColumnDefinition Width="163*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lblLogin" Content="Numéro d'employé:" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <Label x:Name="lblPassword" Content="Mot de passe:" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tbLogin" Text="{Binding Path=Login}" HorizontalAlignment="Left" Height="23" Margin="133.667,28,0,0" VerticalAlignment="Top" Width="166" Grid.Column="1"/>
                <TextBox x:Name="tbPassword" Text="{Binding Path=Password}" HorizontalAlignment="Left" Height="23" Margin="133.667,78,0,0" VerticalAlignment="Top" Width="166" Grid.Column="1"/>
                <Button x:Name="btnConnexion" Command="{Binding Path=LoginCommand}" Content="Se connecter" HorizontalAlignment="Left" Margin="133.667,119,0,0" VerticalAlignment="Top" Width="166" Grid.Column="1"/>
            </Grid>
        </GroupBox>
    </Border>
    
</UserControl>
