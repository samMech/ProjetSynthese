<UserControl xmlns:ComposantsUtils="clr-namespace:ComposantsUtils;assembly=ComposantsUtils"  xmlns:Utilitaire="clr-namespace:InterfaceEntrepriseWPF.Utilitaire;assembly=ComposantsUtils"  xmlns:CalendrierRDV="clr-namespace:CalendrierRDV;assembly=CalendrierRDV"  x:Class="InterfaceEntrepriseWPF.Vues.VueGestionDispos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InterfaceEntrepriseWPF.Vues"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="1000">
    
    <DockPanel LastChildFill="True">

        <Grid DockPanel.Dock="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <!-- Zone d'ajout -->
            <GroupBox Header="Ajout de disponibilités" Style="{StaticResource StyleTitre}" Margin="5" Grid.Row="0">
                <StackPanel Margin="5,0">
                    
                    <!-- Date -->
                    <Label Content="1) Choisir une date"/>
                    <Calendar />

                    <!-- Plage horaire -->
                    <Label Content="2) Choisir une plage horaire"/>
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource StyleTexte}">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="De" Grid.Column="0"/>
                        <ComposantsUtils:TimePicker Grid.Column="1" HeureJour="{Binding DebutPlageAjout}"/>
                        <Label Content="à" Grid.Column="2"/>
                        <ComposantsUtils:TimePicker Grid.Column="3" HeureJour="{Binding FinPlageAjout}"/>
                    </Grid>

                    <!-- Durée -->
                    <Label Content="3) Choisir la durée d'un rendez-vous"/>
                    <ComboBox Margin="10" ItemsSource="{Binding DureesRDV}" Padding="0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Label Content="{Binding}" ContentStringFormat="{}{0} minutes" Style="{StaticResource StyleTexte}" Padding="0"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Content="Ajouter les disponibilités"/>

                </StackPanel>
            </GroupBox>

            <!-- Zone de modification -->
            <GroupBox Header="Modification / Suppression" Style="{StaticResource StyleTitre}" Grid.Row="1">
                <StackPanel Margin="5" HorizontalAlignment="Center">                    
                    <Button Content="Modifier la disponibilité"/>
                    <Button Content="Supprimer les disponibilités"/>
                    <TextBox Text="Raison..." VerticalContentAlignment="Center" Style="{StaticResource StyleTexte}" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>            
            </GroupBox>

            <!-- Navigation -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                <Button Content="Accueil"/>
                <Button Content="Consulter les rendez-vous"/>                
            </StackPanel>
        </Grid>

        <!-- Avertissement -->
        <Label DockPanel.Dock="Bottom" Content="Attention la/les disponibilités sélectionnées contiennent des rendez-vous ! Veuillez fournir une raison." VerticalContentAlignment="Center" Grid.Row="0" Grid.ColumnSpan="3" HorizontalContentAlignment="Center"/>
                
        <!-- Composant graphique -->
        <Border BorderThickness="2" Margin="5,15,5,0">
            <CalendrierRDV:CalendrierRDV />
        </Border>
        
    </DockPanel>
    
</UserControl>
